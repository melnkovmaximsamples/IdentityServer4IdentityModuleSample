@model IdentityModule.Web.ViewModels.LoginViewModel
<h1>Login</h1>


<form asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="All"></div>
    
    <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="Username" autofocus/>
        <span asp-validation-for="Username"></span>
    </div>
    @*<div>
        <label>Email</label>
        <input asp-for="Email" autofocus/>
        <span asp-validation-for="Email"></span>
    </div>*@
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <p>
        <button type="submit">Log in</button>
    </p>
</form>